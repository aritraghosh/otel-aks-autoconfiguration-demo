# OpenTelemetry AKS Demo Configuration
# Copy this file to config.env and fill in your values

# ============================================
# Azure Configuration
# ============================================
export SUBSCRIPTION_ID="your-subscription-id-here"
export RESOURCE_GROUP="otel-demo-rg"
export LOCATION="eastus"

# ============================================
# AKS Configuration
# ============================================
export AKS_CLUSTER_NAME="otel-demo-cluster"
export AKS_NODE_COUNT=2
export AKS_NODE_SIZE="Standard_DS2_v2"

# ============================================
# Azure Container Registry Configuration
# ============================================
# Note: ACR name must be globally unique and alphanumeric only
export ACR_NAME="oteldemoacr$(date +%s)"
export ACR_SKU="Basic"

# ============================================
# Application Insights Configuration
# ============================================
export APP_INSIGHTS_NAME="otel-demo-insights"

# ============================================
# Application Configuration
# ============================================
export NAMESPACE="otel-demo"
export FRONTEND_IMAGE_TAG="latest"
export BACKEND_IMAGE_TAG="latest"

# ============================================
# Instructions
# ============================================
# 1. Update SUBSCRIPTION_ID with your Azure subscription ID
# 2. Optionally change RESOURCE_GROUP, LOCATION, and other values
# 3. Save this file as config.env
# 4. Run: ./scripts/setup.sh
